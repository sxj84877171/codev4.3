<?xml version="1.0" encoding="utf-8"?>


<resources>  
    <declare-styleable name="AppinfoList">
    	<attr name="xmlFile" format="reference"  />
        <attr name="rows" format="integer"  />
        <attr name="cellWidth" format="integer"  />
        <attr name="cellHeight" format="integer"  />
    </declare-styleable>
    <declare-styleable name="Appinfo">
    	<attr name="activity" format="string"  />
        <attr name="packageInfo" format="string"  />
        <attr name="icon" format="reference"  />
        <attr name="uri" format="string"  />
        <attr name="groupid" format="integer"  />
    </declare-styleable>
	<declare-styleable name="PviMenu">
        <attr name="act" format="string"  />
        <attr name="op" format="string"  />
        <attr name="sub" format="string"  /><!-- 有子菜单，值为子菜单名 -->
        <attr name="p" format="string"  />  <!-- 有父菜单，值为父菜单名，等于父菜单的sub的值 -->
    </declare-styleable> 
    
    <declare-styleable name="Theme.Pvi" parent="@android:style/Theme"> 
       <!-- The most prominent text color.  --> 
        <attr name="textColorPrimary" format="reference|color" />
        <attr name="textColorHint" format="reference|color" />
        
        <attr name="alertDialogStyle" format="reference" />
        <attr name="tabWidgetStyle" format="reference" />
     </declare-styleable> 
     
     <declare-styleable name="TabWidget">
        <!-- Drawable used to draw the divider between tabs. -->
        <attr format="reference" name="divider"/>
        <!-- Determines whether the strip under the tab indicators is drawn or not. -->
        <attr name="tabStripEnabled" format="boolean" />
        <!-- Drawable used to draw the left part of the strip underneath the tabs. -->
        <attr name="tabStripLeft" format="reference" />
        <!-- Drawable used to draw the right part of the strip underneath the tabs. -->
        <attr name="tabStripRight" format="reference" />
    </declare-styleable>
    
    <declare-styleable name="PviDataList">
        <!-- 行高 -->
        <attr format="float" name="lineHeight"/>
        <attr format="float" name="lineBgLeft"/>
        <attr name="lineBgNormal" format="reference" />
        <attr name="lineBgHighlight" format="reference" />
    </declare-styleable>
     
         <!-- The set of attributes that describe a AlertDialog's theme. -->
    <declare-styleable name="AlertDialog">
        <attr name="fullDark" format="reference|color" />
        <attr name="topDark" format="reference|color" />
        <attr name="centerDark" format="reference|color" />
        <attr name="bottomDark" format="reference|color" />
        <attr name="fullBright" format="reference|color" />
        <attr name="topBright" format="reference|color" />
        <attr name="centerBright" format="reference|color" />
        <attr name="bottomBright" format="reference|color" />
        <attr name="bottomMedium" format="reference|color" />
        <attr name="centerMedium" format="reference|color" />
    </declare-styleable>
     
      <declare-styleable name="SelectSpinner">   
       <attr name="textSize" format="integer"></attr>
       <attr name="width" format="integer"></attr>
       <attr name="gravity" format="string"></attr>
    </declare-styleable>   
    
    <declare-styleable name="PviAnimationDrawable">
        <attr name="variablePadding" format="boolean" />
        <!-- If true, the animation will only run a single time and then
             stop.  If false (the default), it will continually run,
             restarting at the first frame after the last has finished. -->
        <attr name="oneshot" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PviAnimationDrawableItem">
        <!-- Amount of time (in milliseconds) to display this frame. -->
        <attr name="duration" format="integer" />
        <!-- Reference to a drawable resource to use for the frame.  If not
             given, the drawable must be defined by the first child tag. -->
        <attr name="drawable" format="reference" />
    </declare-styleable> 
     
</resources>
