				android:layout_height="fill_parent" android:text="我要订购" android:id="@+id/subscribe" android:background="@drawable/tab_indicator"></Button>
			
			
		</LinearLayout>

		<LinearLayout android:orientation="horizontal"
			android:layout_marginTop="10px" android:layout_height="wrap_content"
			android:layout_width="fill_parent">
			<TextView android:layout_height="25px"
				android:textColor="@color/black" android:textSize="20px" android:layout_width="fill_parent" android:text="【本专区包含的书籍】"></TextView>
			
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_marginTop="10px" android:layout_width="fill_parent" android:layout_height="200px">
			<LinearLayout android:orientation="vertical"
				android:layout_width="300px" android:layout_height="fill_parent">
				<TextView android:layout_width="fill_parent"
					android:text="书名一" android:layout_height="30px" android:textColor="@color/black" android:id="@+id/bookname01"></TextView>
				<TextView android:layout_width="fill_parent"
					android:text="书名二" android:layout_height="30px" android:textColor="@color/black" android:id="@+id/bookname02"></TextView>
				<TextView android:layout_width="fill_parent"
					android:text="书名三" android:layout_height="30px" android:textColor="@color/black" android:id="@+id/bookname03"></TextView>
				<TextView android:layout_width="fill_parent"
					android:text="书名四" android:layout_height="30px" android:textColor="@color/black" android:id="@+id/bookname04"></TextView>
				<TextView android:layout_width="fill_parent"
					android:text="书名五" android:layout_height="30px" android:textColor="@color/black" android:id="@+id/bookname05"></TextView>
			</LinearLayout>

			<LinearLayout android:orientation="vertical"
				android:layout_width="300px" android:layout_height="fill_parent">
				<TextView android:id="@+id/author01" android:layout_width="fill_parent"
					android:text="作者" android:layout_height="30px" android:textColor="@color/black" android:textSize="12px"></TextView>
				<TextView android:id="@+id/author02" android:layout_width="fill_parent"
					android:text="作者" android:layout_height="30px" android:textColor="@color/black" android:textSize="12px"></TextView>
				<TextView android:id="@+id/author03" android:layout_width="fill_parent"
					android:text="作者" android:layout_height="30px" android:textColor="@color/black" android:textSize="12px"></TextView>
				<TextView android:id="@+id/author04" android:layout_width="fill_parent"
					android:text="作者" android:layout_height="30px" android:textColor="@color/black" android:textSize="12px"></TextView>
				<TextView android:id="@+id/author05" android:layout_width="fill_parent"
					android:text="作者" android:layout_height="30px" android:textColor="@color/black" android:textSize="12px"></TextView>
			</LinearLayout>

		</LinearLayout>
		<LinearLayout android:orientation="horizontal" android:layout_marginLeft="5px"
			android:layout_marginTop="10px" android:layout_height="wrap_content"
			android:layout_width="fill_parent">
			
			<TextView android:layout_width="fill_parent"
				android:textColor="@color/black" android:layout_height="wrap_content" android:textSize="20px"
				android:gravity="center" android:text="更多&gt;&gt;" android:id="@+id/more"></TextView>
		</LinearLayout>
		
	</LinearLayout>

