<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/white" android:layout_x="0px"
	android:layout_y="0px" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_x="10px" android:layout_y="10px" 
		android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_marginRight="10px" android:layout_marginTop="5px"
			android:layout_height="160px" android:orientation="horizontal">
			<ImageView android:layout_width="160px" android:layout_height="fill_parent" android:id="@+id/image"></ImageView>
			<LinearLayout android:orientation="vertical"
				android:layout_height="fill_parent" android:layout_width="fill_parent">

				<LinearLayout android:orientation="horizontal"
					android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="40px">
					<TextView android:layout_width="400px"
						android:gravity="left" android:textColor="@color/black"
						android:layout_height="fill_parent" android:text="书包名称" android:id="@+id/title"></TextView>
					
				</LinearLayout>

				<LinearLayout android:orientation="horizontal"
					android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="80px">
					<TextView android:gravity="left"
						android:textColor="@color/black" android:layout_height="fill_parent" android:text="简介：正在获取..." android:layout_width="fill_parent" android:id="@+id/details"></TextView>
			
				</LinearLayout>

			</LinearLayout>
		</LinearLayout>

		

		<LinearLayout android:orientation="horizontal"
			android:gravity="center_horizontal" android:layout_width="fill_parent"
			android:layout_height="40px">
			
