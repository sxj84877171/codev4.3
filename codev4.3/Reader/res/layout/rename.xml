<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:gravity="center"
	android:orientation="vertical" android:layout_height="wrap_content">
	<AbsoluteLayout android:background="@color/white"
		android:layout_width="400px" android:gravity="center"
		android:layout_x="100px" android:layout_y="100px" android:orientation="vertical"
		android:layout_height="200px">
		<TextView android:text="重命名  " android:layout_width="240px" android:visibility="gone"
			android:gravity="center" android:id="@+id/rename" android:textColor="@color/black"
			android:textSize="20px" android:layout_x="50px" android:layout_y="10px"
			android:layout_marginLeft="30px" android:layout_height="45px"></TextView>
		<LinearLayout android:orientation="vertical"
			android:gravity="center_vertical" android:layout_x="30px"
			android:layout_y="65px" android:layout_width="fill_parent"
			android:layout_height="100px">
			<TextView android:layout_width="wrap_content" 
	                  android:text="请输入新名称: (长度限定在25个字符以内)"
				      android:gravity="center" 
				       android:textAppearance="@style/bold.black.small"
				      android:textColor="@color/black"
				      android:layout_marginBottom="10dp"
				      android:layout_height="wrap_content">
				      </TextView>
			<EditText android:longClickable="false" android:layout_width="340px"
			          android:layout_height="35dp" 
				      android:id="@+id/rename_name" 
				      android:background="@drawable/local_search"
				       android:singleLine="true"
				       android:maxLength="25"
				      android:textColor="@color/black">
		    </EditText>
		    <!-- 
		    <TextView android:id="@+id/tishiyu"
			          android:layout_width="wrap_content" 
	                  android:text=""
				      android:gravity="center" 
				      android:textColor="@color/black"
				      android:layout_height="wrap_content">
				      </TextView>
				      
				      <TextView android:layout_x="50px" android:layout_y="120px"
			android:id="@+id/hint" android:textColor="@color/black"
			android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>
		     -->
			
		</LinearLayout>
		
	</AbsoluteLayout>
</LinearLayout>
