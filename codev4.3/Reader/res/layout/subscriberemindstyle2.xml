<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@color/white"
				xmlns:android="http://schemas.android.com/apk/res/android"
		>
<LinearLayout 
	android:orientation="vertical" 
	android:gravity="center_horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_x="0px"
	android:layout_y="0px"
	android:id="@+id/mainblock"
>

	<TextView android:text="预订提醒设置 " android:layout_width="fill_parent"
	android:gravity="center"
	android:textSize="25px"
	android:layout_marginTop="40px"
	android:textColor="@color/black"
	android:layout_height="wrap_content"/>
	
	<ImageView android:layout_width="wrap_content" android:id="@+id/image"
			   android:layout_height="wrap_content"
			   android:layout_marginTop="10px"
			   android:src="@drawable/timeset_split"/>
			   
	
	<TextView android:text="* 定时提醒：每天8:00到20:00发送最新的图书更新提示" android:layout_width="550px"
	android:textSize="20px"
	android:gravity="left"
	android:layout_marginTop="15px"
	android:layout_marginLeft="30px"
	android:textColor="@color/black"
	android:layout_height="wrap_content"/>
	
	<TextView android:text="* 即时提醒：预订图书更新后立即发送提示给您。发送时间：8:00-20:00" android:layout_width="550px"
	android:textSize="20px"
	android:gravity="left"
	android:layout_marginTop="15px"
	android:layout_marginLeft="30px"
	android:textColor="@color/black"
	android:layout_height="wrap_content"/>
	
	<TextView android:text="* 24时提醒：预订图书更新后立即发送提示给您。发送时间：全天24小时" android:layout_width="550px"
	android:textSize="20px"
	android:gravity="left"
	android:layout_marginTop="15px"
	android:layout_marginLeft="30px"
	
	android:textColor="@color/black"
	android:layout_height="wrap_content"/>
	
	<LinearLayout android:layout_width="wrap_content" android:orientation="horizontal" 
	android:layout_height="wrap_content" android:background="@drawable/timeset_back"
		android:gravity="center_vertical" android:layout_marginTop="15px">
		
		
		<LinearLayout android:layout_width="173px" android:orientation="horizontal" 
					  android:gravity="center_horizontal"	android:layout_height="wrap_content">
		<Button
			android:id="@+id/subscriberemind_ontime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:background="@drawable/notcheck"
		/>
		<TextView android:text="定时提醒 " android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:gravity="center_vertical"
				  android:textColor="@color/black"
				  android:textSize="22px"
				   android:layout_marginLeft="10dp"
				  />
		</LinearLayout>
		
		<LinearLayout android:layout_width="173px" android:orientation="horizontal" 
					  android:gravity="center_horizontal"	android:layout_height="wrap_content">
		<Button
			android:id="@+id/subscriberemind_intime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:background="@drawable/notcheck"
		/>
		<TextView android:text="即时提醒 " android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:gravity="center_vertical"
				  android:textColor="@color/black"
				  android:textSize="22px"
				   android:layout_marginLeft="10dp"
				  />
		</LinearLayout>
		
		<LinearLayout android:layout_width="173px" android:orientation="horizontal" 
					  android:gravity="center_horizontal"	android:layout_height="wrap_content">
		<Button
			android:id="@+id/subscriberemind_after24hours"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:background="@drawable/notcheck"
		/>
		<TextView android:text="24小时提醒 " android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:gravity="center_vertical"
				  android:textColor="@color/black"
				  android:textSize="22px"
				   android:layout_marginLeft="10dp"
				  />
		</LinearLayout>
		
		
		
	</LinearLayout>	
</LinearLayout>


<LinearLayout android:layout_width="fill_parent" android:gravity="right"
			  android:layout_height="wrap_content" android:layout_y="635dp">
			  
			  <Button android:layout_width="100dp" android:layout_height="33dp"
				android:id="@+id/ok"
				android:text="确  定"
				android:layout_marginRight="20px"
				style="@style/button_ui1"
			  />
			  
			  <Button android:layout_width="100dp" android:layout_height="33dp"
				android:id="@+id/cancel"
				android:text="取  消"
				android:layout_marginRight="31px"
				style="@style/button_ui1"
			  />
			  
			
			  
			  
</LinearLayout>



</AbsoluteLayout>


