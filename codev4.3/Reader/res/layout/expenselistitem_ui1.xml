<LinearLayout 
android:id="@+id/LinearLayout01" 
android:layout_width="fill_parent" 
xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="42dp" android:background="@drawable/bg_datalist">	
<TextView android:paddingLeft="5pt" android:id="@+id/expname" android:layout_height="fill_parent" android:gravity="left|center_vertical" android:layout_width="190px" android:lines="1" android:text="消费书籍名称 " android:textAppearance="@style/normal.black.big"></TextView>
	<TextView android:id="@+id/exptype" android:layout_height="fill_parent" android:gravity="left|center_vertical" android:layout_width="80dp" android:textAppearance="@style/normal.black.big" android:text="类型 "></TextView>
	<TextView android:id="@+id/exptime" android:layout_height="fill_parent" android:gravity="center_horizontal|center_vertical" android:layout_width="200dp" android:text="2010/12/24 18:30" android:textAppearance="@style/normal.black.big" android:lines="1"></TextView>
	<TextView android:layout_marginRight="5pt" android:gravity="right|center_vertical" android:id="@+id/expfee" android:layout_height="fill_parent" android:layout_width="fill_parent"  android:lines="1" android:textAppearance="@style/normal.black.big" android:text="0.00元 "></TextView>
</LinearLayout>