<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:pvi="http://schemas.android.com/apk/res/com.pvi.ap.reader"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@color/white" android:id="@+id/mainblock">

<com.pvi.ap.reader.activity.pviappframe.PviDataList
                android:focusableInTouchMode="true" android:id="@+id/list" android:layout_width="550dp"
                android:background="#fff" android:focusable="true"
                android:layout_marginLeft="20dp" pvi:lineHeight="84" android:layout_height="wrap_content"></com.pvi.ap.reader.activity.pviappframe.PviDataList>



	<RelativeLayout android:id="@+id/RelativeLayout08"
		android:layout_height="wrap_content"
		android:paddingTop="15dp"
		android:layout_alignParentBottom="true" 
		android:layout_width="fill_parent" 
		android:layout_marginBottom="10dp" android:paddingRight="20dp">
		<EditText android:longClickable="false" android:id="@+id/searchInput"
			android:layout_marginLeft="30dp"
			style="@style/search_edittext_ui1"></EditText>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/Serach"
			android:id="@+id/searchButton" android:layout_alignParentRight="true"
			style="@style/search_button_ui1"></Button>
	</RelativeLayout>


</RelativeLayout>