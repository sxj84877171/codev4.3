<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:id="@+id/menubar"
	android:orientation="vertical" 
	android:background="@color/white" android:layout_height="49dp">
	<ImageView android:layout_width="fill_parent" android:background="@drawable/statusbar_bottom_ui1" android:layout_height="wrap_content" android:focusable="false">
	</ImageView>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center_vertical">
		<ImageButton android:id="@+id/menubtn" android:layout_gravity="left|center_vertical" 
		android:background="@null" android:src="@drawable/button_menu_ui1" 
		android:layout_width="wrap_content" 
		android:layout_height="fill_parent" android:paddingRight="5dp" android:paddingLeft="5dp"/>

		<RelativeLayout android:id="@+id/RelativeLayout02"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
			<LinearLayout android:layout_width="wrap_content"
				android:id="@+id/LinearLayout05" android:layout_height="fill_parent"
				android:gravity="center"
				android:layout_centerHorizontal="true">
				<ImageButton android:id="@+id/prev"
					android:background="@null" android:src="@drawable/button_prepage_ui1" android:layout_height="fill_parent" android:layout_width="40dp"></ImageButton>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/curpage" android:textAppearance="@style/normal.black.big" android:gravity="right" android:text="1" android:minWidth="30px"></TextView>
				<TextView android:id="@+id/TextView02"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="/" android:textColor="@color/black" android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:textAppearance="@style/normal.black.big"></TextView>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="1" android:id="@+id/pages" android:textAppearance="@style/normal.black.big" android:minWidth="30px"></TextView>
				<ImageButton android:id="@+id/next"
					android:background="@null" android:src="@drawable/button_nextpage_ui1" android:layout_height="fill_parent" android:layout_width="40dp"></ImageButton>
			</LinearLayout>


			<LinearLayout android:id="@+id/LinearLayout08"
				android:layout_width="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_height="fill_parent">
				<ImageButton android:id="@+id/fp_application" android:layout_marginRight="5dp" android:background="@null"
				 android:src="@drawable/allapp" android:layout_width="40dp" android:layout_height="38dp" 
				 android:visibility="gone"></ImageButton><ImageButton android:id="@+id/fp_settings" 
				 android:src="@drawable/button_setting_ui1" 
				 android:background="@null" android:layout_height="fill_parent" android:layout_width="wrap_content" android:paddingLeft="5dp" android:paddingRight="5dp"></ImageButton>
				 <ImageButton android:id="@+id/fp_music" android:background="@null" 
				 android:src="@drawable/button_music_ui1" 
				 android:layout_height="fill_parent" android:layout_width="wrap_content" android:paddingLeft="5dp" android:paddingRight="5dp"></ImageButton><ImageButton android:id="@+id/back"
					android:background="@null" 
					android:src="@drawable/button_back_ui1" android:layout_height="fill_parent" android:layout_width="wrap_content" android:paddingLeft="5dp" android:paddingRight="5dp"></ImageButton>
					
			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>

</LinearLayout>