<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="vertical"
	android:gravity="center"
	android:layout_height="fill_parent" android:background="@color/white">
				
				
				<LinearLayout android:layout_marginTop="20px"
							  android:layout_marginLeft="30px"
							  android:layout_width="fill_parent"
							  android:layout_height="wrap_content"
							  android:orientation="horizontal"
							  >
					<com.pvi.ap.reader.activity.pviappframe.BoldTextView android:id="@+id/phonename_label" android:text="手机号"
						android:gravity="center_vertical|right" android:layout_width="80px"
						android:layout_height="wrap_content" android:textColor="@color/black"
						android:textSize="20dp"/>
					
					<TextView android:id="@+id/phonename" android:textColor="@color/black"
						android:singleLine="true"
						android:layout_marginLeft="20dp"
						android:gravity="center_vertical" android:layout_width="wrap_content"
						android:lines="1" android:layout_height="wrap_content"
						 android:textSize="20dp"></TextView>
				</LinearLayout>

				<LinearLayout android:layout_width="fill_parent" android:layout_marginTop="20px"
							  android:layout_height="wrap_content"
							  android:orientation="horizontal"
							  android:layout_marginLeft="30px"
							  >
					<com.pvi.ap.reader.activity.pviappframe.BoldTextView android:id="@+id/nickname_label" android:text="@string/nickname_label"
						android:gravity="center_vertical|right" android:layout_width="80px"
						android:layout_height="wrap_content" android:textColor="@color/black"
						android:textSize="20dp"/>
					
					<TextView android:id="@+id/nickname" android:textColor="@color/black"
						android:layout_marginLeft="20dp"
						android:singleLine="true"
						android:gravity="center_vertical" android:layout_width="wrap_content"
						android:lines="1" android:layout_height="wrap_content"
						 android:textSize="20dp"></TextView>
				</LinearLayout>
	
				<LinearLayout android:layout_width="fill_parent" android:layout_marginTop="20px"
							  android:layout_height="wrap_content"
							  android:orientation="horizontal"
							  android:layout_marginLeft="30px"
							  >
					<com.pvi.ap.reader.activity.pviappframe.BoldTextView android:id="@+id/age_label" android:text="@string/age_label"
						android:gravity="center_vertical|right" android:layout_width="80px"
						android:layout_height="wrap_content" android:textColor="@color/black"
						android:textSize="20dp"/>
				
					
					<TextView android:id="@+id/age" android:text=""
						android:layout_marginLeft="20dp"
						android:singleLine="true"
						android:textColor="@color/black" android:gravity="center_vertical"
						android:layout_width="100px" android:layout_height="fill_parent"
						android:layout_marginTop="20dp" android:textSize="20dp"></TextView>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent" android:layout_marginTop="20px"
							  android:layout_height="wrap_content"
							  android:orientation="horizontal"
							  android:layout_marginLeft="30px"
							  >
					<com.pvi.ap.reader.activity.pviappframe.BoldTextView android:id="@+id/sex_label" android:text="@string/sex_label"
						android:gravity="center_vertical|right" android:layout_width="80px"
						android:layout_height="wrap_content" android:textColor="@color/black"
						android:textSize="20dp"/>
				
				
					<TextView android:id="@+id/sex" android:text=""
						android:layout_marginLeft="20dp"
						android:singleLine="true"
						android:textColor="@color/black" android:gravity="center_vertical"
						android:layout_width="100px" android:layout_height="fill_parent"
						android:layout_marginTop="20dp" android:textSize="20dp"></TextView>
				</LinearLayout>
				
				<LinearLayout android:layout_width="fill_parent" android:layout_marginTop="20px"
							  android:layout_height="wrap_content"
							  android:orientation="horizontal"
							  android:layout_marginLeft="30px"
							  >
					<com.pvi.ap.reader.activity.pviappframe.BoldTextView android:id="@+id/address_label" android:text="@string/address_label"
						android:gravity="center_vertical|right" android:layout_width="80px"
						android:layout_height="wrap_content" android:textColor="@color/black"
						android:textSize="20dp"/>
				
			
					<TextView android:id="@+id/address" android:text=""
					android:layout_marginLeft="20dp"
					android:layout_gravity="center_vertical"
					android:textColor="@color/black" android:gravity="center_vertical"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					 android:textSize="20dp"></TextView>

				</LinearLayout>

				<LinearLayout android:layout_width="fill_parent" android:layout_marginTop="20px"
							  android:layout_height="wrap_content"
							  android:orientation="horizontal"
							  android:layout_marginLeft="30px"
							  >
					<com.pvi.ap.reader.activity.pviappframe.BoldTextView android:id="@+id/signature_label" android:text="@string/signature_label"
						android:gravity="center_vertical|right" android:layout_width="80px"
						android:layout_height="wrap_content" android:textColor="@color/black"
						android:textSize="20dp"/>
				
	
					<TextView android:id="@+id/signature" android:gravity="top"
					android:layout_marginLeft="20dp"
					android:layout_gravity="center_vertical"
					android:layout_width="fill_parent" android:textColor="@color/black"
					android:layout_height="wrap_content" 
					android:textSize="20dp" android:maxLength="200"></TextView>

				</LinearLayout>
				
</LinearLayout>
