<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:background="@color/white"
	android:id="@+id/mainblock"
	android:layout_height="fill_parent"
	android:gravity="center_horizontal"
	>
	

	
		<TextView android:layout_width="fill_parent"
		android:layout_marginTop="40px"
			android:layout_height="wrap_content" android:textSize="25px"
			android:textColor="#000000" android:gravity="center" android:text="@string/confighandsetinfo_form_title" />
        <ImageView android:layout_width="wrap_content" android:id="@+id/image"
			   android:layout_height="wrap_content"
			   android:layout_marginTop="10px"
			   android:src="@drawable/timeset_split"/>
			   
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_marginTop="30px" android:layout_height="1px" android:background="@color/white"/>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_marginTop="30px"
			android:orientation="horizontal" android:paddingLeft="145dp">
			<TextView android:layout_height="wrap_content" android:textSize="20px"
				      android:textColor="#000000"
				      android:text="@string/confighandsetinfo_product"
				      android:paddingRight="15px" android:gravity="left" android:layout_width="100px"/>

			<TextView android:layout_width="270px"
					  android:id="@+id/confighandsetinfo_product"
					  android:layout_height="wrap_content"
					  android:textSize="20px"
				      android:textColor="#000000"
				      android:gravity="left" android:paddingLeft="5px"/>
		</LinearLayout>
		
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_marginTop="30px"
			android:orientation="horizontal" android:paddingLeft="145dp">
			<TextView android:layout_height="wrap_content" android:textSize="20px"
				      android:textColor="#000000"
				       android:text="@string/confighandsetinfo_equ"
				      android:gravity="left" android:layout_width="100px"/>

			<TextView android:layout_width="270px"
					  android:id="@+id/confighandsetinfo_equ"
					  android:layout_height="wrap_content"
					  android:textSize="20px"
				      android:textColor="#000000"
				      android:gravity="left" android:paddingLeft="5px"/>
		</LinearLayout>
		
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_marginTop="30px"
			android:orientation="horizontal" android:paddingLeft="145dp">
			<TextView android:layout_height="wrap_content" android:textSize="20px"
				      android:textColor="#000000"
				       android:text="@string/confighandsetinfo_imei"
				      android:gravity="left" android:layout_width="100px"/>

			<TextView android:layout_width="270px"
					  android:id="@+id/confighandsetinfo_imei"
					  android:layout_height="wrap_content"
					  android:textSize="20px"
				      android:textColor="#000000"
				      android:gravity="left" android:paddingLeft="5px"/>
		</LinearLayout>
		
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_marginTop="30px"
			android:orientation="horizontal" android:paddingLeft="145dp">
			<TextView android:layout_height="wrap_content" android:textSize="20px"
				      android:textColor="#000000"
				       android:text="软件版本:"
				      android:gravity="left" android:layout_width="100px"/>

			<TextView android:layout_width="270px"
					  android:id="@+id/softvision"
					  android:layout_height="wrap_content"
					  android:textSize="20px"
				      android:textColor="#000000"
				      android:gravity="left" android:paddingLeft="5px"/>
		</LinearLayout>


		


	</LinearLayout>

 

