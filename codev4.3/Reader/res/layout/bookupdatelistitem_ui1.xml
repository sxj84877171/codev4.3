<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/bg_datalist" android:layout_height="wrap_content">
	<TextView android:layout_height="fill_parent" android:gravity="center_vertical"
		android:id="@+id/contentName" android:lines="1" android:text="书籍名称 "
		android:layout_marginLeft="5px"
		android:layout_width="142dp" android:textAppearance="@style/normal.black.big"></TextView>
	<TextView android:layout_height="fill_parent"
		android:layout_width="190dp" android:id="@+id/chapterName"
		android:lines="1" android:gravity="center_vertical"
		android:textAppearance="@style/normal.black.big" android:text="章节名称 "></TextView>
	<TextView android:layout_height="fill_parent"
		android:layout_width="80dp" android:id="@+id/authorName"
		android:lines="1" android:text="作者名 " android:gravity="center_vertical"
		android:textAppearance="@style/normal.black.big"></TextView>
	<TextView android:layout_height="fill_parent" android:id="@+id/addDate"
		android:layout_width="112px" android:textAppearance="@style/normal.black.big"
		android:gravity="center_vertical" android:text="2010-12-24 12:00:00"
		android:lines="1"></TextView>
	<CheckBox android:id="@+id/checkID" android:layout_gravity="center_vertical"
		android:focusable="false"
		android:focusableInTouchMode="false"
		android:layout_height="38px" android:layout_width="38px"
		android:layout_marginLeft="2px"
		android:duplicateParentState="true" style="@style/CheckBoxPviUi1"></CheckBox>
</LinearLayout>